@model Domain.Reports.ReporteResumenSIAF

<div class="container-fluid">
    <div class="col-12 mb-4">
        <section class="content-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb float-right small d-none d-sm-inline-flex">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home">&nbsp;</i>Inicio</a></li>
                    <li class="breadcrumb-item"><span><i class="fa fa-bar-chart">&nbsp;</i>Reportes </span></li>
                    <li class="breadcrumb-item active"><span><i class="fa fa-list-alt">&nbsp;</i>@ViewBag.Title </span></li>
                </ol>
            </nav>
            <h1 class="">@ViewBag.Title <small></small></h1>
        </section>
    </div>

    <div class="col-12 mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body bg-light-gray">
                        @using (Html.BeginForm("DetallePlanillaPorTrabajador", "Reportes", FormMethod.Get, new { id = "frmDetallePlanillaPorTrabajador" }))
                        {
                            <div class="form-row">
                                <div class="form-group col-lg-2 col-md-4 col-6">
                                    @Html.Label("anio", "Año", new { @class = "control-label" })
                                    @Html.DropDownList("anio", ViewBag.ListaAños as SelectList, null, new { @class = "form-control" })
                                </div>

                                <div class="form-group col-lg-2 col-md-4 col-6">
                                    @Html.Label("mes", "Mes", new { @class = "control-label" })
                                    @Html.DropDownList("mes", ViewBag.ListaMeses as SelectList, null, new { @class = "form-control text-uppercase" })
                                </div>

                                <div class="form-group col-lg-3 col-md-4 col-6">
                                    <label for="idCategoria">Categoria</label>
                                    @Html.DropDownList("idCategoria", ViewBag.ListaCategoriasPlanillas as SelectList, new { @class = "form-control text-uppercase" })
                                </div>

                                <div class="form-group col-lg-2 col-4">
                                    <label>&nbsp;</label>
                                    <button type="button" id="btnConsultar" class="btn btn-block btn-outline-primary"><i class="fa fa-fw fa-search"></i> Consultar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive mt-4">
            <table class="table table-hover" id="dataTableTrabajadoresConPlanilla" width="100%">
                <thead class="thead-dark">
                    <tr>
                        <th>Cod.Trab.</th>
                        <th>Tip.Doc.</th>
                        <th>Num.Doc.</th>
                        <th>Apellidos y Nombres</th>
                        <th>Estado</th>
                        <th>Vínculo</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Cod.Trab.</th>
                        <th>Tip.Doc.</th>
                        <th>Num.Doc.</th>
                        <th>Apellidos y Nombres</th>
                        <th>Estado</th>
                        <th>Vínculo</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="row" id="divDescargaExcel">
            <div class="col-lg-12">
                <button type="button" id="btnExcelDescargarDetalle" class="btn btn-link pl-0">Descargar información en Excel [.xlsx]</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            generarDatatableTrabajadoresConPlanilla(null, null, null);

            $("#frmDetallePlanillaPorTrabajador").on("change", "#anio", function () {
                let cmbDestino = $('#frmDetallePlanillaPorTrabajador #mes');

                let url = '@Url.Action("ObtenerMesesPorAnio", "General")';

                CargarMeses(this, cmbDestino, url);
             });

            $("#frmDetallePlanillaPorTrabajador").on("click", "#btnConsultar", function () {
                let anio = $("#frmDetallePlanillaPorTrabajador #anio").val();
                let mes = $("#frmDetallePlanillaPorTrabajador #mes").val();
                let idCategoria = $("#frmDetallePlanillaPorTrabajador #idCategoria").val();

                generarDatatableTrabajadoresConPlanilla(anio, mes, idCategoria);
            });

            $(document).on("click", "#btnExcelDescargarDetalle", function (e) {
                document.forms.frmDetallePlanillaPorTrabajador.action = "@Url.Action("DescargaDetallePlanilla", "Reportes")";
                document.forms.frmDetallePlanillaPorTrabajador.submit();
            });

            $(document).on('change', '.modal-body #cmbCategorias', function () {
                let parametros = {
                    trabajadorID: $(this).data("trabajador-id"),
                    trabajadorPlanillaID: $(this).val(),
                    anio: $(this).data("anio"),
                    mes: $(this).data("mes")
                };

                $.ajax({
                    url: '@Url.Action("DetallePlanilla", "Reportes")',
                    type: "GET",
                    data: parametros,
                    beforeSend: function () {
                        $('#content-body').hide();
                        $('#spin-loader').show();
                    },
                    success: function (data) {
                        $('#modal-container-lg').find('.modal-content').html(data);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        $('#content-body').html('<p class="alert alert-danger">' + jqXHR.responseText + '</p>');
                        $('#spin-loader').hide();
                        $('#content-body').show();
                    }
                });
            });
        });

        function generarDatatableTrabajadoresConPlanilla(anio, mes, idCategoria) {
            let parametros = {
                anio: anio,
                mes: mes,
                idCategoria: idCategoria
            };

            $('#dataTableTrabajadoresConPlanilla').DataTable({
                ajax: {
                    'url': '@Url.Action("ObtenerListaTrabajadoresConPlanilla", "Reportes")',
                    'data': parametros,
                    'type': 'get'
                },
                columns: [
                    { data: 'trabajadorCod' },
                    { data: 'tipoDocumentoDesc' },
                    { data: 'numDocumento' },
                    { data: 'apellidosNombre' },
                    { data: 'estadoDesc' },
                    { data: 'vinculoDesc' },
                    { data: 'trabajadorID' }
                ],
                columnDefs: [
                    {
                        targets: -1,
                        className: 'text-center',
                        orderable: false,
                        render: function (data, type, row) {
                            return `<a class="modal-link-lg" href="@Url.Action("DetallePlanilla", "Reportes")?trabajadorID=${row.trabajadorID}&anio=${row.año}&mes=${row.mes}` +
                                '" title="Ver planillas"><i class="fa fa-list-alt" aria-hidden="true"></i></a>';
                        }
                    }
                ],
                bStateSave: false,
                bDestroy: true,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todas"]],
                iDisplayLength: 10,
                language: {
                    search: "Buscar: ",
                    lengthMenu: "Mostrar _MENU_ filas",
                    info: "Mostrando del _START_ al _END_ de _TOTAL_ elementos.",
                    infoEmpty: "No se encontraron registros.",
                    zeroRecords: "No hay data disponible.",
                    emptyTable: "No hay data disponible.",
                    paginate: {
                        first: "Primero",
                        previous: "Previo",
                        next: "Siguiente",
                        last: "Último"
                    },
                    aria: {
                        sortAscending: ": activar para ordenar la columna en orden ascendente",
                        sortDescending: ": activar para ordenar la columna en orden descendente"
                    },
                    loadingRecords: "Cargando...",
                    processing: "Procesando..."
                },
                searching: true,
                initComplete: function () {
                    var api = this.api();

                    if (api.rows().count() > 0) {
                        $('#divDescargaExcel').css('display', 'flex');
                    } else {
                        $('#divDescargaExcel').css('display', 'none');
                    }
                }
            });
        }
    </script>
}