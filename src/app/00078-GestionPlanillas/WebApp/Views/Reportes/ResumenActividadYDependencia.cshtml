@model Domain.Reports.ReporteResumenPorActividadYDependencia

<style>
    .cabecera {
        border-top: 1px dashed !important;
        border-bottom: 1px dashed !important;
    }

    .detalle {
        border-right: 1px solid !important;
    }

    .pie-1 {
        border-top: 1px dashed !important;
        border-bottom: 1px dashed !important;
        border-right: 1px solid !important;
    }

    .pie-2 {
        border-top: 1px dashed !important;
        border-bottom: 1px dashed !important;
    }

    .pie-3 {
        border-top: 1px solid !important;
        border-bottom: 1px solid !important;
        border-right: 1px solid !important;
    }

    .pie-4 {
        border-top: 1px solid !important;
        border-bottom: 1px solid !important;
    }
</style>

<div class="container-fluid">
    <div class="col-12 mb-4">
        <section class="content-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb float-right small d-none d-sm-inline-flex">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home">&nbsp;</i>Inicio</a></li>
                    <li class="breadcrumb-item"><span><i class="fa fa-bar-chart">&nbsp;</i>Reportes </span></li>
                    <li class="breadcrumb-item active"><span><i class="fa bi-building">&nbsp;</i>@ViewBag.Title </span></li>
                </ol>
            </nav>
            <h1 class="">@ViewBag.Title <small></small></h1>
        </section>
    </div>

    <div class="col-12 mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body bg-light-gray">
                        @using (Html.BeginForm("ResumenActividadYDependencia", "Reportes", FormMethod.Get, new { id = "frmResumenPorActividadYDependencia" }))
                        {
                            <div class="form-row">
                                <div class="form-group col-lg-2 col-md-4 col-6">
                                    @Html.Label("anio", "Año", new { @class = "control-label" })
                                    @Html.DropDownList("anio", ViewBag.ListaAños as SelectList, null, new { @class = "form-control" })
                                </div>

                                <div class="form-group col-lg-2 col-md-4 col-6">
                                    @Html.Label("mes", "Mes", new { @class = "control-label" })
                                    @Html.DropDownList("mes", ViewBag.ListaMeses as SelectList, null, new { @class = "form-control text-uppercase" })
                                </div>

                                <div class="form-group col-lg-3 col-md-4 col-6">
                                    <label for="idCategoria">Categoria</label>
                                    @Html.DropDownList("idCategoria", ViewBag.ListaCategoriasPlanillas as SelectList, new { @class = "form-control text-uppercase" })
                                </div>

                                <div class="form-group col-lg-2 col-4">
                                    <label>&nbsp;</label>
                                    <button type="button" id="btnConsultar" class="btn btn-block btn-outline-primary"><i class="fa fa-fw fa-search"></i> Consultar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        @if(Model != null)
        {
            <div class="row">
                <div class="col-12 mt-4">
                    <div class="row">
                        <div class="col-lg-6">
                            <p class="h5 text-left"><small>@Model.oficina</small></p>
                            <p class="h5 text-left"><small>@Model.subOficina</small></p>
                        </div>
                        <div class="col-lg-6">
                            <p class="h5 text-right"><small>Fecha consulta: <b>@Model.fechaConsulta</b></small></p>
                            <p class="h5 text-right"><small>Hora consulta: <b>@Model.horaConsulta</b></small></p>
                        </div>
                    </div>

                    <p class="h2 text-center">@Model.titulo</p>

                    <div class="table-responsive mt-5" style="min-height:300px">
                        <table class="table table-borderless" style="width: 100%;">
                            @if (Model.listaResumenPorActividad != null && Model.listaResumenPorActividad.Count() > 0)
                            {
                                foreach (var actividad in Model.listaResumenPorActividad)
                                {
                                    <tr>
                                        <th>Actividad</th>
                                        <td>@actividad.actividadCod</td>
                                        <th class="text-center">Dependencia</th>
                                        <th class="text-center cabecera">Remuneración</th>
                                        <th class="text-center cabecera">Reintegro</th>
                                        <th class="text-center cabecera">Deducción</th>
                                        <th class="text-center cabecera">Bruto</th>
                                        <th class="text-center cabecera">Total Descuento</th>
                                        <th class="text-center cabecera">Neto a Pagar</th>
                                    </tr>
                                    foreach (var dependencia in actividad.listaDependencias)
                                    {
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td>@dependencia.dependenciaDesc</td>
                                            <td class="text-right detalle">@dependencia.totalRemuneracionFormat</td>
                                            <td class="text-right">@dependencia.totalReintegroFormat</td>
                                            <td class="text-right detalle">@dependencia.totalDeduccionFormat</td>
                                            <td class="text-right detalle">@dependencia.totalBrutoFormat</td>
                                            <td class="text-right detalle">@dependencia.totalDescuentoFormat</td>
                                            <td class="text-right ">@dependencia.totalSueldoFormat</td>
                                        </tr>
                                    }
                                    <tr>
                                        <th colspan="3">Total por Actividad</th>
                                        <th class="text-right pie-1">@actividad.totalRemuneracionFormat</th>
                                        <th class="text-right pie-2">@actividad.totalReintegroFormat</th>
                                        <th class="text-right pie-1">@actividad.totalDeduccionFormat</th>
                                        <th class="text-right pie-1">@actividad.totalBrutoFormat</th>
                                        <th class="text-right pie-1">@actividad.totalDescuentoFormat</th>
                                        <th class="text-right pie-2">@actividad.totalSueldoFormat</th>
                                    </tr>
                                }
                                <tr>
                                    <th colspan="3"></th>
                                    <th class="text-right pie-3">@Model.totalRemuneracionFormat</th>
                                    <th class="text-right pie-4">@Model.totalReintegroFormat</th>
                                    <th class="text-right pie-3">@Model.totalDeduccionFormat</th>
                                    <th class="text-right pie-3">@Model.totalBrutoFormat</th>
                                    <th class="text-right pie-3">@Model.totalDescuentoFormat</th>
                                    <th class="text-right pie-4">@Model.totalSueldoFormat</th>
                                </tr>
                            }
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <button type="button" id="btnExcelDescargar" class="btn btn-link pl-0">Descargar información en Excel [.xlsx]</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
             $("#frmResumenPorActividadYDependencia").on("change", "#anio", function () {
                let cmbDestino = $('#frmResumenPorActividadYDependencia #mes');

                let url = '@Url.Action("ObtenerMesesPorAnio", "General")';

                CargarMeses(this, cmbDestino, url);
             });

            $(document).on("click", "#btnConsultar", function (e) {
                document.forms.frmResumenPorActividadYDependencia.action = "@Url.Action("ResumenActividadYDependencia", "Reportes")";
                document.forms.frmResumenPorActividadYDependencia.submit();
            });
            
            $(document).on("click", "#btnExcelDescargar", function (e) {
                document.forms.frmResumenPorActividadYDependencia.action = "@Url.Action("DescargaResumenActividadYDependencia", "Reportes")";
                document.forms.frmResumenPorActividadYDependencia.submit();
            });
        });
    </script>
}
