@model IEnumerable<WebApp.Models.ConceptoModel>
@using GridMvc.Html

<div class="container-fluid">
    <div class="col-12 mb-4">
        <section class="content-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb float-right small d-none d-sm-inline-flex">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home">&nbsp;</i>Inicio</a></li>
                    <li class="breadcrumb-item"><span><i class="fa fa-cogs">&nbsp;</i>Configuración </span></li>
                    <li class="breadcrumb-item active"><span><i class="fa bi-ui-checks">&nbsp;</i>@ViewBag.Title </span></li>
                </ol>
            </nav>
            <h1 class="">@ViewBag.Title <small></small></h1>
        </section>
    </div>

    <div class="col-12">
        <a href="@Url.Action("Nuevo", "Conceptos")" class="btn btn-primary pull-right modal-link">
            <i class="fa bi-ui-checks-grid"></i> Nuevo concepto
        </a>

        <p class="h3"><small>@ViewBag.Title</small></p>
        <br /><br />
        <div class="table-responsive" style="min-height:300px">
            @Html.Grid(Model).Columns(columns =>
            {
                columns.Add(c => c.C_ConceptoCod).Titled("Cod.Concepto").Css("text-left").Filterable(true);
                columns.Add(c => c.T_TipoConceptoDesc).Titled("Tip.Concepto").Css("text-left").Filterable(true);
                columns.Add(c => c.T_ConceptoDesc).Titled("Descrirpción").Css("text-left").Filterable(true);
                columns.Add(c => c.B_Habilitado).Titled("Estado").Css("text-center").Filterable(true);
                columns.Add().SetWidth(150).Encoded(false).Sanitized(false).RenderValueAs(model => @<a href="@Url.Action("Editar", "Conceptos", new { id = model.I_ConceptoID })" class="modal-link"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> <span class="d-none d-md-inline-block">Editar</span></a>);
            }).WithPaging(12).Sortable(true).WithGridItemsCount("Registros encontrados").EmptyText("No se encontraron registros")
        </div>

    </div>
</div>
