@model IEnumerable<WebApp.Models.TotalPlanillaDependenciaModel>

<style>
    .cabecera {
        border-top: 1px dashed !important;
        border-bottom: 1px dashed !important;
    }

    .detalle {
        border-right: 1px solid !important;
    }

    .pie-1 {
        border-top: 1px dashed !important;
        border-bottom: 1px dashed !important;
        border-right: 1px solid !important;
    }

    .pie-2 {
        border-top: 1px dashed !important;
        border-bottom: 1px dashed !important;
    }
</style>

<div class="container-fluid">
    <div class="col-12 mb-4">
        <section class="content-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb float-right small d-none d-sm-inline-flex">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home">&nbsp;</i>Inicio</a></li>
                    <li class="breadcrumb-item"><span><i class="fa fa-bar-chart">&nbsp;</i>Reportes </span></li>
                    <li class="breadcrumb-item active"><span><i class="fa bi-building">&nbsp;</i>@ViewBag.Title </span></li>
                </ol>
            </nav>
            <h1 class="">@ViewBag.Title <small></small></h1>
        </section>
    </div>

    <div class="col-12 mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body bg-light-gray">
                        @using (Html.BeginForm("ResumenDependencia", "Planillas", FormMethod.Get, new { id = "frmResumenPorDependencia" }))
                        {
                            <div class="form-row">
                                <div class="form-group col-lg-2 col-md-4 col-6">
                                    @Html.Label("anio", "Año", new { @class = "control-label" })
                                    @Html.DropDownList("anio", ViewBag.ListaAños as SelectList, null, new { @class = "form-control" })
                                </div>

                                <div class="form-group col-lg-2 col-md-4 col-6">
                                    @Html.Label("mes", "Mes", new { @class = "control-label" })
                                    @Html.DropDownList("mes", ViewBag.ListaMeses as SelectList, null, new { @class = "form-control text-uppercase" })
                                </div>

                                <div class="form-group col-lg-3 col-md-4 col-6">
                                    <label for="idCategoria">Categoria</label>
                                    @Html.DropDownList("idCategoria", ViewBag.ListaCategoriasPlanillas as SelectList, new { @class = "form-control text-uppercase" })
                                </div>

                                <div class="form-group col-lg-2 col-4">
                                    <label>&nbsp;</label>
                                    <button type="submit" class="btn btn-block btn-outline-primary"><i class="fa fa-fw fa-search"></i> Consultar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="table-responsive mt-4" style="min-height:300px">
                    <table class="table table-borderless" style="width: 100%;">
                        @if (Model != null && Model.Count() > 0)
                        {
                            var lista = Model.GroupBy(x => x.actividadCod);

                            foreach (var group in lista)
                            {
                                <thead>
                                    <tr>
                                        <th>Actividad</th>
                                        <td>@group.Key</td>
                                        <th class="text-center">Dependencia</th>
                                        <th class="text-center cabecera">Remuneración</th>
                                        <th class="text-center cabecera">Reintegro</th>
                                        <th class="text-center cabecera">Deducción</th>
                                        <th class="text-center cabecera">Bruto</th>
                                        <th class="text-center cabecera">Total Descuento</th>
                                        <th class="text-center cabecera">Neto a Pagar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in group)
                                    {
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td>@item.dependenciaDesc</td>
                                            <td class="text-right detalle">@item.totalRemuneracionFormat</td>
                                            <td class="text-right">@item.totalReintegroFormat</td>
                                            <td class="text-right detalle">@item.totalDeduccionFormat</td>
                                            <td class="text-right detalle">@item.totalBrutoFormat</td>
                                            <td class="text-right detalle">@item.totalDescuentoFormat</td>
                                            <td class="text-right ">@item.totalSueldoFormat</td>
                                        </tr>
                                    }
                                    <tr>
                                        <th colspan="3">Total por Actividad</th>
                                        <th class="text-center pie-1">Remuneración</th>
                                        <th class="text-center pie-2">Reintegro</th>
                                        <th class="text-center pie-1">Deducción</th>
                                        <th class="text-center pie-1">Bruto</th>
                                        <th class="text-center pie-1">Total Descuento</th>
                                        <th class="text-center pie-2">Neto a Pagar</th>
                                    </tr>
                                </tbody>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
             $("#frmResumenPorDependencia").on("change", "#anio", function () {
                let cmbDestino = $('#frmResumenPorDependencia #mes');

                let url = '@Url.Action("ObtenerMesesPorAnio", "General")';

                CargarMeses(this, cmbDestino, url);
             });

            $("#frmResumenPorDependencia").on("click", "button", function () {
                let anio = $("#frmResumenPorDependencia #anio").val();
                let mes = $("#frmResumenPorDependencia #mes").val();
                let idCategoria = $("#frmResumenPorDependencia #idCategoria").val();
            });
        });
    </script>
}
