<div class="container-fluid">
    <div class="col-12 mb-4">
        <section class="content-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb float-right small d-none d-sm-inline-flex">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home">&nbsp;</i>Inicio</a></li>
                    <li class="breadcrumb-item"><span><i class="fa bi-tools">&nbsp;</i>Mantenimiento </span></li>
                    <li class="breadcrumb-item active"><span><i class="fa bi-ui-checks-grid">&nbsp;</i>@ViewBag.Title </span></li>
                </ol>
            </nav>
            <h1 class="">@ViewBag.Title <small></small></h1>
        </section>
    </div>

    <div class="col-12 mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body bg-light-gray">
                        @using (Html.BeginForm("Generar", "Planillas", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-row">
                                <div class="form-group col-lg-2 col-md-4 col-6">
                                    <label for="anio">Año</label>
                                    <select id="anio" name="anio" class="form-control">
                                        <option value="2022">2022</option>
                                        <option value="2023">2023</option>
                                        <option value="2024">2024</option>
                                        <option value="2025">2025</option>
                                    </select>
                                </div>

                                <div class="form-group col-lg-2 col-md-4 col-6">
                                    <label for="periodo">Mes</label>
                                    <select id="mes" name="mes" class="form-control text-uppercase">
                                        <option value="1">Enero</option>
                                        <option value="2">Febrero</option>
                                        <option value="3">Marzo</option>
                                        <option value="4">Abril</option>
                                        <option value="5">Mayo</option>
                                        <option value="6">Junio</option>
                                        <option value="7">Julio</option>
                                        <option value="8">Agosto</option>
                                        <option value="9">Setiembre</option>
                                        <option value="10">Octubre</option>
                                        <option value="11">Noviembre</option>
                                        <option value="12">Diciembrer</option>
                                    </select>
                                </div>
                                
                                <div class="form-group col-lg-3 col-md-4 col-6">
                                    <label for="idCategoria">Categoria</label>
                                    <select id="idCategoria" name="idCategoria" class="form-control text-uppercase">
                                        <option value="1">Haberes Administrativo</option>
                                        <option value="2">Haberes Docente</option>
                                        <option value="3">Haberes Médico</option>
                                        <option value="4">Pensiones</option>
                                        <option value="5">CAFAE</option>
                                        <option value="6">Docente Investigador</option>
                                        <option value="7">Practicante</option>
                                        <option value="8">Productividad</option>
                                        <option value="9">Generadora de Recursos</option>
                                    </select>
                                </div>

                                @*<div class="form-group col-lg-2 col-md-4 col-6">
                                    <label for="tipoEstudio">Tipo de estudio</label>
                                    @Html.DropDownListFor(model => model.tipoEstudio, ViewBag.TipoEstudios as SelectList, new { @class = "form-control form-control-sm text-uppercase" })
                                </div>*@

                                <div class="form-group col-lg-3 col-6">
                                    <label>&nbsp;</label>
                                    <button type="submit" id="btnGenerar" class="btn btn-block btn-outline-primary"><i class="fa fa-fw fa-cogs"></i> Generar Planilla</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>