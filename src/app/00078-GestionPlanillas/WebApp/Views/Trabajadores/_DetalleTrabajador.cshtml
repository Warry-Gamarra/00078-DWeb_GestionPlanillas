@model WebApp.Models.TrabajadorModel
@Scripts.Render("~/bundles/jqueryval")


<div class="modal-header bg-dark-gray" style="border-radius: .2rem .2rem 0px 0px">
    <h5 class="modal-title text-center"><i class="fa fa-tag">&nbsp;</i> @ViewBag.Title</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>

<div class="modal-body">
    <div class="form-row">
        <div class="col-2">
            <div class="form-group">
                @Html.LabelFor(model => model.C_TrabajadorCod, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.C_TrabajadorCod, new { @class = "form-control", @readonly = "@readonly" })
            </div>
        </div>
        <div class="col-5">
            <div class="form-group">
                @Html.LabelFor(model => model.T_ApellidosNombre, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.T_ApellidosNombre, new { @class = "form-control", @readonly = "@readonly" })
            </div>
        </div>
        <div class="col-1">
            <div class="form-group">
                <label class="control-label" for="">Clase</label>
                <input type="text" class="form-control" value="AP" readonly />
            </div>
        </div>
        <div class="col-1">
            <div class="form-group">
                <label class="control-label" for="">Categoría</label>
                <input type="text" class="form-control" value="STC" readonly />
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label class="control-label" for="">Carnet Essalud</label>
                <input type="text" class="form-control" value="7606021NRPAW000" readonly />
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col-3">
            <div class="form-group">
                @Html.LabelFor(model => model.T_TipoDocumentoDesc, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.T_TipoDocumentoDesc, new { @class = "form-control", @readonly = "@readonly" })
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label class="control-label" for="">&nbsp;</label>
                @Html.TextBoxFor(model => model.C_NumDocumento, new { @class = "form-control", @readonly = "@readonly" })
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label class="control-label" for="">Cta. de Banco</label>
                <input type="text" class="form-control" value="BCP" readonly />
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label class="control-label" for="">&nbsp;</label>
                <input type="text" class="form-control" value="4071900555" readonly />
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                @Html.LabelFor(model => model.T_EstadoDesc, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.T_EstadoDesc, new { @class = "form-control", @readonly = "@readonly" })
            </div>
        </div>
    </div>
    
    <div class="form-row">
        <div class="col-12">
            <div class="mb-3 row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Local</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="L46 PASAJE FEDERICO VILLARREAL N° 285 - SAN MIGUEL" readonly />
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="mb-3 row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Dependencia</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="010800 CENTRO UNIVERSITARIO DE CÓMPUTO E INFORMÁTICA" readonly />
                </div>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col-2">
            <div class="form-group">
                @Html.LabelFor(model => model.T_RegimenDesc, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.T_RegimenDesc, new { @class = "form-control", @readonly = "@readonly" })
                <p class="text-danger small">@Html.ValidationMessageFor(model => model.T_RegimenDesc)</p>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label class="control-label" for="">AFPS</label>
                <input type="text" class="form-control" value="PROFUTURO" readonly />
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label class="control-label" for="">N° CUSPP</label>
                <input type="text" class="form-control" value="579111WNPRA6" readonly />
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label class="control-label" for="">CARGO</label>
                <input type="text" class="form-control" value="" readonly />
            </div>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <button type="submit" class="btn btn-primary center" id="btnsubmit"><i class="fa fa-save"></i> Guardar</button>
    </div>
</div>

<div class="modal-footer" id="div_msg">
    <button type="button" class="btn btn-secondary" id="btnCancel" data-dismiss="modal"><i class="fa fa-times-circle-o"> </i>Cancelar</button>
</div>
