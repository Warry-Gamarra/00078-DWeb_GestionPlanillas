@model WebApp.Models.ValorExternoConceptoModel
@Scripts.Render("~/bundles/jqueryval")

<div class="modal-header bg-dark-gray" style="border-radius: .2rem .2rem 0px 0px">
    <h5 class="modal-title text-center"><i class="fa fa-tag">&nbsp;</i> @ViewBag.Title</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm((string)ViewBag.Action, "ValoresExternos", new { area = "" }, new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "div_msg",
        OnBegin = "Load",
        OnComplete = "Stop"
    }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.conceptoExternoValorID)


        <div class="form-row">
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label" for="anio">Año</label>
                    @Html.TextBoxFor(model => model.anio, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label" for="mesDesc">Mes</label>
                    @Html.TextBoxFor(model => model.mesDesc, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label" for="tipoDocumentoDesc">Tip.Doc.Identidad</label>
                    @Html.TextBoxFor(model => model.tipoDocumentoDesc, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label" for="numDocumento">Num.Documento</label>
                    @Html.TextBoxFor(model => model.numDocumento, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-12">
                <div class="form-group">
                    <label class="control-label" for="datosPersona">Datos de la persona</label>
                    @Html.TextBoxFor(model => model.datosPersona, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-12">
                <div class="form-group">
                    <label class="control-label" for="categoriaPlanillaDesc">Planilla</label>
                    @Html.TextBoxFor(model => model.categoriaPlanillaDesc, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label" for="conceptoCod">Cod.Concepto</label>
                    @Html.TextBoxFor(model => model.conceptoCod, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label" for="tipoConceptoDesc">Tip.Concepto</label>
                    @Html.TextBoxFor(model => model.tipoConceptoDesc, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-12">
                <div class="form-group">
                    <label class="control-label" for="conceptoDesc">Descripción</label>
                    @Html.TextAreaFor(model => model.conceptoDesc, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-12">
                <div class="form-group">
                    <label class="control-label" for="valorConcepto">Valor</label>
                    @Html.TextBoxFor(model => model.valorConcepto, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-12">
                <div class="form-group">
                    <label class="control-label" for="proveedorDesc">Origen</label>
                    @Html.TextBoxFor(model => model.proveedorDesc, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <button type="submit" class="btn btn-primary center" id="btnsubmit"><i class="fa fa-save"></i> Guardar</button>
        </div>
    }
</div>

<div class="modal-footer" id="div_msg">
    <div class="col-md-12" style="display:none" id="loading">
        <h6>Espere un momento...</h6>
        <div class="progress">
            <div class="indeterminate"></div>
        </div>
    </div>

    <button type="button" class="btn btn-secondary" id="btnCancel" data-dismiss="modal">
        <i class="fa fa-times-circle-o"></i> Cerrar
    </button>
</div>
